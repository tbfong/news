    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title><%=@name%> </title>
  </head>
  <body>

    <div class="container mt-5">
      <h1>Weather and News</h1>
    </div>

    <p> The current temperature is <%= @current_temperature%> </p>
    <p> Forecasted weather conditions: </p> 
    <p> <ul>
    <% for day in @forecast %>
    <li> A high temperature of <%="#{day["temperatureHigh"]}"%> and <%="#{day["summary"]}"%> </li>
   <%end %> </p> </ul> 

<div class="container mt-5">
    <h2>Top Headlines</h1>
</div> 
 <p> <ul>
  <% for title in @paper %> 
  <li> <%="#{title["title"]}"%> <bl> 
  <bl>
  URL: <%="#{title["url"]}"%> </li>
 <% end %> 
  </p> 









